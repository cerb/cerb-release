--TEST--
macros allow trailing commas in their argument and parameter list
--TEMPLATE--
{% import _self as test %}

{% macro test(a, b,) -%}
    {{ a|default('a') }}<br />
    {{- b|default('b') }}<br />
{%- endmacro %}
{% macro test2(a, b) -%}
    {{ a|default('a') }}<br />
    {{- b|default('b') }}<br />
{%- endmacro %}

{{ test.test(1, 2,) }}
{{ test.test(3, 4) }}
{{ test.test2(5, 6,) }}
{{ test.test2(7, 8) }}
--DATA--
return []
--EXPECT--
1<br />2<br />
3<br />4<br />
5<br />6<br />
7<br />8<br />

{
  "package": {
    "name": "Page Wizard: Home Overview",
    "revision": 1,
    "requires": {
      "cerb_version": "9.2.0",
      "plugins": [

      ]
    },
    "library": {
      "name": "Home",
      "uri": "cerb_workspace_page_home",
      "description": "A home page showing the current worker's tickets, tasks, reminders, and calendar",
      "point": "workspace_page",
      "image": ""
    },
    "configure": {
      "prompts": [
        {
          "type": "text",
          "label": "Owner Context:",
          "key": "owner_context",
          "hidden": true,
          "params": {
          }
        },
        {
          "type": "text",
          "label": "Owner Context ID:",
          "key": "owner_context_id",
          "hidden": true,
          "params": {
          }
        }
      ],
      "placeholders": [

      ]
    }
  },
  "records": [
    {
      "uid": "workspace_home",
      "_context": "workspace_page",
      "name": "Home",
      "owner__context": "{{{owner_context}}}",
      "owner_id": "{{{owner_context_id}}}",
      "extension_id": "core.workspace.page.workspace"
    },
    {
      "uid": "workspace_tab_overview",
      "_context": "workspace_tab",
      "name": "Overview",
      "page_id": "{{{uid.workspace_home}}}",
      "pos": 0,
      "extension_id": "core.workspace.tab.dashboard",
      "params": {
        "layout": ""
      }
    },
    {
      "uid": "workspace_widget_my_tickets",
      "_context": "workspace_widget",
      "tab_id": "{{{uid.workspace_tab_overview}}}",
      "label": "My Tickets",
      "extension_id": "core.workspace.widget.worklist",
      "pos": 1,
      "width_units": 2,
      "zone": "content",
      "params": {
        "context": "cerberusweb.contexts.ticket",
        "query_required": "owner.id:me status:o sort:-updated",
        "query": "",
        "render_limit": "10",
        "header_color": "#6a87db",
        "columns": [
          "t_last_wrote_address_id",
          "t_updated_date",
          "t_group_id",
          "t_bucket_id"
        ]
      }
    },
    {
      "uid": "workspace_widget_my_tasks",
      "_context": "workspace_widget",
      "tab_id": "{{{uid.workspace_tab_overview}}}",
      "label": "My Tasks",
      "extension_id": "core.workspace.widget.worklist",
      "pos": 2,
      "width_units": 2,
      "zone": "content",
      "params": {
        "context": "cerberusweb.contexts.task",
        "query_required": "status:o owner.id:me sort:due",
        "query": "",
        "render_limit": "10",
        "header_color": "#6a87db",
        "columns": [
          "t_due_date",
          "t_importance",
          "t_updated_date"
        ]
      }
    },
    {
      "uid": "workspace_widget_my_calendar",
      "_context": "workspace_widget",
      "tab_id": "{{{uid.workspace_tab_overview}}}",
      "label": "My Calendar",
      "extension_id": "core.workspace.widget.calendar",
      "pos": 3,
      "width_units": 2,
      "zone": "content",
      "params": {
        "calendar_id": "{{current_worker_calendar_id}}"
      }
    },
    {
      "uid": "workspace_widget_my_reminders",
      "_context": "workspace_widget",
      "tab_id": "{{{uid.workspace_tab_overview}}}",
      "label": "My Reminders",
      "extension_id": "core.workspace.widget.worklist",
      "pos": 4,
      "width_units": 2,
      "zone": "content",
      "params": {
        "context": "cerberusweb.contexts.reminder",
        "query_required": "worker.id:me closed:n sort:remindAt",
        "query": "",
        "render_limit": "10",
        "header_color": "#6a87db",
        "columns": [
          "r_name",
          "r_remind_at",
          "r_updated_at"
        ]
      }
    }
  ]
}
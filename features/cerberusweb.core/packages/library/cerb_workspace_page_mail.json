{
  "package": {
    "name": "Page Wizard: Mail",
    "revision": 1,
    "requires": {
      "cerb_version": "9.2.0",
      "plugins": [

      ]
    },
    "library": {
      "name": "Mail",
      "uri": "cerb_workspace_page_mail",
      "description": "A page for mail processing with open tickets, sent messages, and drafts",
      "point": "workspace_page",
      "image": ""
    },
    "configure": {
      "prompts": [
        {
          "type": "text",
          "label": "Owner Context:",
          "key": "owner_context",
          "hidden": true,
          "params": {
          }
        },
        {
          "type": "text",
          "label": "Owner Context ID:",
          "key": "owner_context_id",
          "hidden": true,
          "params": {
          }
        }
      ],
      "placeholders": [

      ]
    }
  },
  "records": [
    {
      "uid": "workspace_mail",
      "_context": "workspace_page",
      "name": "Mail",
      "owner__context": "{{{owner_context}}}",
      "owner_id": "{{{owner_context_id}}}",
      "extension_id": "core.workspace.page.workspace"
    },
    {
      "uid": "workspace_tab_inbox",
      "_context": "workspace_tab",
      "name": "Inbox",
      "page_id": "{{{uid.workspace_mail}}}",
      "pos": 0,
      "extension_id": "core.workspace.tab.worklists",
      "params": [

      ]
    },
    {
      "uid": "workspace_tab_sent",
      "_context": "workspace_tab",
      "name": "Sent",
      "page_id": "{{{uid.workspace_mail}}}",
      "pos": 1,
      "extension_id": "core.workspace.tab.worklists",
      "params": [

      ]
    },
    {
      "uid": "workspace_tab_drafts",
      "_context": "workspace_tab",
      "name": "Drafts",
      "page_id": "{{{uid.workspace_mail}}}",
      "pos": 2,
      "extension_id": "core.workspace.tab.worklists",
      "params": [

      ]
    },
    {
      "uid": "workspace_list_mail",
      "_context": "workspace_list",
      "context": "ticket",
      "tab_id": "{{{uid.workspace_tab_inbox}}}",
      "pos": 0,
      "view": {
        "title": "Needs Attention",
        "model": {
          "options": {
            "header_color": "#6a87db"
          },
          "columns": [
            "t_last_wrote_address_id",
            "t_importance",
            "t_updated_date",
            "t_group_id",
            "t_bucket_id",
            "t_owner_id"
          ],
          "params": [

          ],
          "params_required_query": "status:[o] inGroupsOf:me",
          "limit": 10,
          "sort_by": "t_updated_date",
          "sort_asc": false,
          "subtotals": "t_group_id",
          "context": "cerberusweb.contexts.ticket"
        }
      }
    },
    {
      "uid": "workspace_list_mail_sent",
      "_context": "workspace_list",
      "context": "message",
      "tab_id": "{{{uid.workspace_tab_sent}}}",
      "pos": 1,
      "view": {
        "title": "My sent messages",
        "model": {
          "options": {
            "header_color": "#6a87db"
          },
          "columns": [
            "a_email",
            "t_group_id",
            "m_created_date",
            "m_worker_id"
          ],
          "params": [

          ],
          "params_required_query": "worker.id:me isOutgoing:y",
          "limit": 10,
          "sort_by": "m_created_date",
          "sort_asc": false,
          "subtotals": "",
          "context": "cerberusweb.contexts.message"
        }
      }
    },
    {
      "uid": "workspace_list_mail_drafts",
      "_context": "workspace_list",
      "context": "draft",
      "tab_id": "{{{uid.workspace_tab_drafts}}}",
      "pos": 2,
      "view": {
        "title": "My drafts",
        "model": {
          "options": {
            "header_color": "#6a87db"
          },
          "columns": [
            "m_hint_to",
            "m_worker_id",
            "m_type",
            "m_updated"
          ],
          "params": [

          ],
          "params_required_query": "worker.id:{{current_worker_id}}",
          "limit": 10,
          "sort_by": "m_updated",
          "sort_asc": false,
          "subtotals": "",
          "context": "cerberusweb.contexts.mail.draft"
        }
      }
    }
  ]
}